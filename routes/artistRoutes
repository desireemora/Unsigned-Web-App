const express = require("express");
const router = express.Router();
const {getArtists, createArtist, getArtist, updateArtist, deleteArtist} = require("../controllers/artistController");

//Simplifying routes with same endpoint /
router.route("/").get(getArtists).post(createArtist);

//Simplifying routes with same endpoint /:id
router.route("/:id").get(getArtist).put(updateArtist).delete(deleteArtist)

module.exports = router;